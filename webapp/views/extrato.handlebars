<div class="wrapper">

    <nav id="sidebar">
        <div class="sidebar-header">
            <h3><a href="/menu-transacoes/{{id}}">MyBank</a></h3>
        </div>

        <ul class="list-unstyled components">
            <p>Operações</p>
            <li>
                <a href="#">Extrato</a>
            </li>
            <li>
                <a href="../sacar/{{id}}">Sacar</a>
            </li>
            <li>
                <a href="../depositar/{{id}}">Depositar</a>
            </li>
            <li>
                <a href="/">Sair</a>
            </li>
        </ul>
    </nav>

    <!-- Page Content -->
    <div id="content">
        {{#if extratos}}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <h1>Seu extrato</h1>
            </nav>            
            {{#each extratos}}
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <h5>{{this.natureza}} - R$ {{this.valor}} - {{this.updatedAt}}</h5>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <h5>Saldo parcial: R$ {{this.saldo_parcial}}</h5>
                </nav>
            {{/each}}
        {{else}}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <h1>Você ainda não fez nenhuma transação bancária</h1>
            </nav>
        {{/if}}
    </div>


</div>   